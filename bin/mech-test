#!/usr/bin/env perl
use strict;
use warnings;

use Test::More;
use Test::WWW::Mechanize;

# Read-in quiz questions
my $file = 'public/dpda-questions.txt';
my @quiz;
open my $fh, '<', $file or die "Can't read $file: $!";
while ( my $line = <$fh> ) {
    chomp $line;
    push @quiz, $line;
}
close $fh;

my $mech = Test::WWW::Mechanize->new();

my $base = 'http://0.0.0.0:5000';

$mech->get("$base/question");

if ( $mech->status eq '200' ) {
    for my $i ( 0 .. @quiz - 1 ) {
        my $question_num = $mech->scrape_text_by_id('question_num');

        my @question = split /\|/, $quiz[$question_num];
        my @meta     = split /\s+/, $question[0];

        $mech->submit_form_ok( {
                form_number => 1,
                fields      => {
                    answer => $meta[2] eq '+' ? 1 : 10,
                },
            }, "submit form for $meta[2] question $question_num"
        );
    }

    is $mech->base, "$base/chart", '/chart';
}
else {
    print "Can't connect to $url\n";
}

done_testing();
